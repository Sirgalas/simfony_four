{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block breadcrumbs %}
        <li class="breadcrumb-item active">Profile</li>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">Profile</div>
        <div class="card-body">
            <table class="table table-bordered mb-0">
                <tbody>
                    <tr>
                        <th>Name</th>
                        <td>
                            {{ user.first_name }} {{ user.last_name }}
                            <a href="{{ path('profile.name') }}" class="btn btn-sm btn-outline-primary"><span class="fa fa-pencil"></span></a>
                        </td>
                    </tr>
                    <tr>
                        <th>ID</th>
                        <td>{{ user.id }}</td>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Created</th>
                        <td>{{ user.date|date('Y-m-d H:i:s') }}</td>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>
                            {{ user.email }}
                        </td>
                        <td><a href="{{ path('profile.email') }}" class="btn btn-sm btn-outline-primary"><span class="fa fa-pencil"></span></a></td>
                    </tr>
                    <tr>
                        <th>Role</th>
                        <td>{{ user_role(user.role) }}</td>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{{ user_status(user.status) }}</td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    {% if user.networks %}
        <div class="card">
            <div class="card-header">Networks</div>
            <div class="card-body">
                <table class="table table-bordered mb-0">
                    <tbody>
                    {% for network in user.networks %}
                        <tr>
                            <th>{{ network.network }}</th>
                            <td>{{ network.identity }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endblock %}
