{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item active">Users</li>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <i class="fa fa-align-justify"></i> Simple Table
        </div>

        <div class="card-body">

            <div class="controls">
                <a href="{{ path('users.create') }}" class="btn btn-success">Create User</a>
            </div>

            <div class="filter">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-2">{{ form_widget(form.name) }}</div>
                    <div class="col-md-2">{{ form_widget(form.email) }}</div>
                    <div class="col-md-2">{{ form_widget(form.role) }}</div>
                    <div class="col-md-2">{{ form_widget(form.status) }}</div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">Filter</button>
                        <a href="{{ path('users') }}" class="btn btn-outline-secondary">Reset</a>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>


            <table class="table table-responsive-sm table-bordered">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.created_at|date('Y-m-d') }}</td>
                        <td><a href="{{ path('users.show', {'id': user.id}) }}">{{ user.name }}</a></td>
                        <td>{{ user.email }}</td>
                        <td>{{ user_role(user.role) }}</td>
                        <td>{{ user_status(user.status) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}